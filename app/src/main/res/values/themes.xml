<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheHorecaMall" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="Theme.TheHorecaMall.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TheHorecaMall.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TheHorecaMall.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">15sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/black</item>
    </style>
    
    
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="minHeight">0dp</item>
        <item name="maxHeight">0dp</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:background">@color/orange</item>

        <item name="android:textSize">15sp</item>

        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ButtonRegister" parent="Widget.AppCompat.Button">
        <item name="minHeight">0dp</item>
        <item name="maxHeight">0dp</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="strokeWidth">4dp</item>
        <item name="strokeColor">@color/blue_heading</item>
        <item name="android:textColor">@color/blue_heading</item>
    </style>

</resources>